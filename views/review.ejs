</head>
<link rel="stylesheet" href="/review.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<body>

  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand ms-5" href="/card">
      <i class="fa-solid fa-arrow-left"></i>
    </a>
  </nav>

<% const items = card %>
<% if(items.length >= 1) {%>
<% let currentIndex=0; %>
  <div class="review  text-center  ">
    <div class="front card " id="front">
      <p class="card-front">
        <%= items[currentIndex].front %>
      </p>
    </div>
    <div class="card-body "  >
      <p class="invisible" id="back">
        <%= items[currentIndex].back %>
      </p>
    </div>
    <div class="flip text-center" id="flip">
      <button onclick="flip()">
        Flip
      </button>
    </div>
    <div class="invisible"  id="next">
      <div  onclick="next()">
        <button>Fail</button>
        <button>Hard</button>
        <button>Good</button>
        <button>Easy</button>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="msg text-center mt-5">
    <h3>You don't have any card.</h3>
    <button><a href="../card">Add new</a></button>
  </div>
<% } %>

</body>=
  <script>
    const items = <%- JSON.stringify(items) %>;
    let currentIndex = 0; // Initialize currentIndex here
    let frontCard = document.getElementById('front');
    let backCard = document.getElementById('back');
    let flipBtn = document.getElementById('flip');
    let nextBtn = document.getElementById('next');
    function flip() {
      backCard.classList.remove('invisible');
      flipBtn.classList.add('invisible');
      nextBtn.classList.remove('invisible');
    }
  
    function next() {
      currentIndex++; // Increment currentIndex
      console.log(currentIndex)
      if (currentIndex >= items.length) {
        currentIndex = 0; // Reset currentIndex if it exceeds array length
      }
      frontCard.innerHTML = "<p>" + items[currentIndex].front + "</p>";
      backCard.innerHTML = "<p>" + items[currentIndex].back + "</p>";
      backCard.classList.add('invisible');
      flipBtn.classList.remove('invisible');
      nextBtn.classList.add('invisible');
    }
  </script>
  
</html>